<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/overviewFragment"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_gravity="top">

            <ImageView
                android:id="@+id/ivBackground"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:gravity="center"
                android:paddingVertical="8dp"
                android:nextFocusLeft="@id/tlCategories">

                <Button
                    android:id="@+id/btSearch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:nextFocusLeft="@id/btSearch"
                    style="@style/CustomTab"
                    android:text="@string/search" />

                <Button
                    android:id="@+id/btForYou"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/CustomTab"
                    android:text="@string/for_you" />

                <Button
                    android:id="@+id/btLive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/CustomTab"
                    android:text="@string/live" />

                <Button
                    android:id="@+id/btMovies"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/CustomTab"
                    android:text="@string/movies" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginVertical="24dp"
                android:orientation="vertical"
                android:paddingHorizontal="16dp">

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="12dp"
                    android:text="@string/hello_blank_fragment"
                    android:textSize="48sp" />

                <TextView
                    android:id="@+id/tvDescription"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:alpha=".8"
                    android:text="@string/hello_blank_fragment"
                    android:textSize="24sp" />
            </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_gravity="bottom"
            android:background="@drawable/fade_gradient" />
    </FrameLayout>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/mainBrowseFragment"
        android:name="com.manjil.tvapplication.MainFragment"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_gravity="bottom"
        android:background="@null" />
</FrameLayout>

